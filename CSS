}

/* Header Styles */
header {
    background: #007bff; /* Primary color for header */
    color: #fff; /* White text color */
    padding: 20px;
    text-align: center; /* Centered text */
}

h1 {
    margin: 0;
    font-size: 2.5em; /* Font size for heading */
}

/* Navigation Styles */
nav {
    margin: 10px 0; /* Space above and below navigation */
}

nav a {
    color: #fff; /* White links */
